<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigationDashboard">

    <fragment
        android:id="@+id/navigationDashboard"
        android:name="com.andreynaz4renko.masterapplication.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/navigateDashboardToProfile"
            app:destination="@id/navigationProfile" />
    </fragment>

    <fragment
        android:id="@+id/navigationProfile"
        android:name="com.andreynaz4renko.masterapplication.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/navigateProfileToDashboard"
            app:destination="@id/navigationDashboard" />
    </fragment>

</navigation>